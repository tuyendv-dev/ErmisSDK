<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    >

    <network.ermis.ui.widgets.avatar.UserAvatarView
        android:id="@+id/userAvatarView"
        style="@style/ermisUiUserAvatarStyle"
        android:layout_marginStart="14dp"
        android:layout_marginTop="@dimen/ui_spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_medium"
        android:singleLine="true"
        android:textAppearance="@style/ermisUiTextAppearance.HeadlineBold"
        app:layout_constraintBottom_toBottomOf="@id/userAvatarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/userAvatarView"
        app:layout_constraintTop_toTopOf="@id/userAvatarView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
