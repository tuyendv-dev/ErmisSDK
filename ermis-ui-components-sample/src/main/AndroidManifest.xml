        <package android:name="com.tokoin.wallet" />
        <package android:name="org.toshi" />
        <package android:name="org.toshi.development" />
    </queries>

    <application
        android:name="network.ermis.sample.application.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        >

        <activity
            android:name="network.ermis.sample.feature.HostActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:scheme="kotlin-modal-wc"
                    android:host="request" />
            </intent-filter>
        </activity>

    </application>
</manifest>
