<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="SingleReactionView">
        <!-- Color of the reaction bubble for current user -->
        <attr name="ermisUiSingleReactionBubbleColorMine"  format="color|reference"/>
        <!-- Color of the reaction bubble for other user-->
        <attr name="ermisUiSingleReactionBubbleColorTheirs"  format="color|reference"/>
        <!-- Border color of the reaction bubble for current user -->
        <attr name="ermisUiSingleReactionBubbleBorderColorMine" format="color|reference" />
        <!-- Border color of the reaction bubble for other user -->
        <attr name="ermisUiSingleReactionBubbleBorderColorTheirs" format="color|reference" />
        <!-- Border width of the reaction bubble for current user -->
        <attr name="ermisUiSingleReactionBubbleBorderWidthMine" format="dimension|reference" />
        <!-- Border width of the reaction bubble for other user -->
        <attr name="ermisUiSingleReactionBubbleBorderWidthTheirs" format="dimension|reference" />
        <!-- Orientation of the bubble -->
        <attr name="ermisUiSingleReactionBubbleOrientation" format="enum">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
            <enum name="by_user" value="2" />
            <enum name="by_user_inverted" value="3" />
        </attr>
    </declare-styleable>
</resources>