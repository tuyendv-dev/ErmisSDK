<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- MediaAttachmentView -->
    <declare-styleable name="MediaAttachmentView">
        <!-- Drawable of the image attachment progressbar. -->
        <attr name="ermisUiMediaAttachmentProgressIcon" format="reference" />
        <!-- Image attachment placeholder icon. -->
        <attr name="ermisUiMediaAttachmentPlaceHolderIcon" format="reference" />
        <!-- Image attachment placeholder icon tint. -->
        <attr name="ermisUiMediaAttachmentPlaceHolderIconTint" format="color|reference" />
        <!-- Image and video attachment background color. -->
        <attr name="ermisUiMediaAttachmentMediaPreviewBackgroundColor" format="color|reference" />
        <!-- The color of the overlay displaying the number of media attachments in the message
         that do not fit inside the preview group. -->
        <attr name="ermisUiMediaAttachmentMoreCountOverlayColor" format="color|reference" />

        <!-- Text size of the image attachment "more" count text. -->
        <attr name="ermisUiMediaAttachmentMoreCountTextSize" format="dimension|reference" />
        <!-- A color of the image attachment "more" count text. -->
        <attr name="ermisUiMediaAttachmentMoreCountTextColor" format="color|reference" />
        <!-- Font name of the image attachment "more" count text. -->
        <attr name="ermisUiMediaAttachmentMoreCountTextFont" format="reference" />
        <!-- Font assets reference for the image attachment "more" count text. -->
        <attr name="ermisUiMediaAttachmentMoreCountFontAssets" format="string" />
        <!-- Text style of the image attachment "more" count text: "normal", "bold", and "italic". -->
        <attr name="ermisUiMediaAttachmentMoreCountTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- The icon overlaid on top of video attachment previews. -->
        <attr name="ermisUiMediaAttachmentPlayVideoIcon" format="reference" />
        <!-- Tints the icon overlaid on top of video attachment previews. -->
        <attr name="ermisUiMediaAttachmentPlayVideoIconTint" format="reference|color" />
        <!-- The background color of the View containing the play button. -->
        <attr name="ermisUiMediaAttachmentPlayVideoIconBackgroundColor" format="color|reference" />
        <!-- The corner radius of the play button. -->
        <attr name="ermisUiMediaAttachmentPlayVideoIconCornerRadius" format="dimension" />
        <!-- The elevation of the play button. -->
        <attr name="ermisUiMediaAttachmentPlayVideoIconElevation" format="dimension" />
        <!-- Sets the top padding of the play video icon. -->
        <attr name="ermisUiMediaAttachmentPlayVideoIconPaddingTop" format="dimension" />
        <!-- Sets the bottom padding of the play video icon. -->
        <attr name="ermisUiMediaAttachmentPlayVideoIconPaddingBottom" format="dimension" />
        <!-- Sets the start padding of the play video icon. -->
        <attr name="ermisUiMediaAttachmentPlayVideoIconPaddingStart" format="dimension" />
        <!-- Sets the end padding of the play video icon. -->
        <attr name="ermisUiMediaAttachmentPlayVideoIconPaddingEnd" format="dimension" />
        <!-- Sets the padding of the play video icon on all sides.
        Using this attribute will override other padding attributes such as start the padding set on
        top, bottom, start and end sides of the icon. -->
        <attr name="ermisUiMediaAttachmentPlayVideoIconPadding" format="dimension" />
    </declare-styleable>
</resources>
