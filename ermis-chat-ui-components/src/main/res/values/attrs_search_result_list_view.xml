<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SearchResultListView">
        <!-- Search info header configuration -->
        <attr name="ermisUiSearchResultListBackground" format="reference" />
        <!-- Modifies the background of search results list (drawable reference). -->
        <attr name="ermisUiSearchResultListSearchInfoBarBackground" format="reference" />
        <!-- Modifies the text color of search results list -->
        <attr name="ermisUiSearchResultListSearchInfoBarTextColor" format="color|reference"/>
        <!-- Modifies the text size of search results list items -->
        <attr name="ermisUiSearchResultListSearchInfoBarTextSize" format="dimension"/>
        <!-- Font assets reference for the search list items -->
        <attr name="ermisUiSearchResultListSearchInfoBarTextFontAssets" format="string"/>
        <!-- Font name of the search list items -->
        <attr name="ermisUiSearchResultListSearchInfoBarTextFont" format="reference"/>
        <!-- Text style of the search list items: "normal", "bold", and "italic". -->
        <attr name="ermisUiSearchResultListSearchInfoBarTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Search results empty state -->
        <!-- Empty state icon -->
        <attr name="ermisUiSearchResultListEmptyStateIcon" format="reference" />
        <!-- Empty state text color -->
        <attr name="ermisUiSearchResultListEmptyStateTextColor" format="color|reference"/>
        <!-- Empty state text size -->
        <attr name="ermisUiSearchResultListEmptyStateTextSize" format="dimension"/>
        <!-- Font assets for empty state text -->
        <attr name="ermisUiSearchResultListEmptyStateTextFontAssets" format="string"/>
        <!-- Font name of empty state text -->
        <attr name="ermisUiSearchResultListEmptyStateTextFont" format="reference"/>
        <!-- Text style of empty state text -->
        <attr name="ermisUiSearchResultListEmptyStateTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Progress Bar -->
        <!-- Drawable of the progressbar displayed when loading the search results -->
        <attr name="ermisUiSearchResultListProgressBarIcon" format="reference" />

        <!-- Search result item - message preview -->
        <!-- A color of search results sender name text -->
        <attr name="ermisUiSearchResultListSenderNameTextColor" format="color|reference"/>
        <!-- Text size of search results sender name text -->
        <attr name="ermisUiSearchResultListSenderNameTextSize" format="dimension"/>
        <!-- Font assets reference for the search results sender name text -->
        <attr name="ermisUiSearchResultListSenderNameTextFontAssets" format="string"/>
        <!-- Font name of the search results sender name text -->
        <attr name="ermisUiSearchResultListSenderNameTextFont" format="reference"/>
        <!-- Text style of the search results sender name text: "normal", "bold", and "italic" -->
        <attr name="ermisUiSearchResultListSenderNameTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <!-- A color of search results message text -->
        <attr name="ermisUiSearchResultListMessageTextColor" format="color|reference"/>
        <!-- Text size of search results message text -->
        <attr name="ermisUiSearchResultListMessageTextSize" format="dimension"/>
        <!-- Font assets reference for the search results message text -->
        <attr name="ermisUiSearchResultListMessageTextFontAssets" format="string"/>
        <!-- Font name of the search results message text -->
        <attr name="ermisUiSearchResultListMessageTextFont" format="reference"/>
        <!-- Text style of the search results message text: "normal", "bold", and "italic" -->
        <attr name="ermisUiSearchResultListMessageTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <!-- A color of search results message time -->
        <attr name="ermisUiSearchResultListMessageTimeTextColor" format="color|reference"/>
        <!-- Text size of search results message time -->
        <attr name="ermisUiSearchResultListMessageTimeTextSize" format="dimension"/>
        <!-- Font assets reference for the search results message time -->
        <attr name="ermisUiSearchResultListMessageTimeTextFontAssets" format="string"/>
        <!-- Font name of the search results message time -->
        <attr name="ermisUiSearchResultListMessageTimeTextFont" format="reference"/>
        <!-- Text style of the search results message time: "normal", "bold", and "italic" -->
        <attr name="ermisUiSearchResultListMessageTimeTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>
</resources>
