<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingVertical="@dimen/ui_spacing_medium"
        >

        <network.ermis.ui.view.messages.reactions.edit.EditReactionsView
            android:id="@+id/editReactionsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_spacing_small"
            android:layout_marginEnd="@dimen/ui_spacing_small"
            />

        <network.ermis.ui.widgets.internal.TouchInterceptingFrameLayout
            android:id="@+id/messageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ui_spacing_small"
            />

        <network.ermis.ui.view.messages.options.MessageOptionsView
            android:id="@+id/messageOptionsView"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/ui_spacing_small"
            android:visibility="gone"
            />

        <network.ermis.ui.view.messages.reactions.user.UserReactionsView
            android:id="@+id/userReactionsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_spacing_small"
            android:layout_marginTop="@dimen/ui_spacing_small"
            android:layout_marginEnd="@dimen/ui_spacing_small"
            android:visibility="gone"
            />

    </LinearLayout>

</ScrollView>
