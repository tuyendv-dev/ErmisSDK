<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/ui_message_composer_leading_content_horizontal_padding"
        android:paddingVertical="@dimen/ui_message_composer_leading_content_vertical_padding"
        >

        <ImageView
            android:id="@+id/attachmentsButton"
            android:layout_width="@dimen/ermis_ui_attachment_button_size"
            android:layout_height="@dimen/ermis_ui_attachment_button_size"
            android:padding="@dimen/ui_spacing_tiny"
            android:src="@drawable/ic_attach"
            tools:ignore="ContentDescription"
            />

        <ImageView
            android:id="@+id/commandsButton"
            android:layout_width="@dimen/ermis_ui_command_button_size"
            android:layout_height="@dimen/ermis_ui_command_button_size"
            android:padding="@dimen/ui_spacing_tiny"
            android:src="@drawable/ic_command"
            tools:ignore="ContentDescription"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</merge>