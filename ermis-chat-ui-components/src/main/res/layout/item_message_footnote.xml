<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageFooterContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/messageFooterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ermis_ui_message_footnote_spacing"
        android:layout_marginEnd="@dimen/ui_spacing_small"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start"
        android:lines="1"
        android:textAppearance="@style/ermisUiTextAppearance.Footnote"
        android:textColor="@color/ui_text_color_primary"
        android:textDirection="locale"
        android:visibility="gone"
        app:drawableTint="@color/ui_grey"
        tools:text="Visible only for you"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/readCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ermis_ui_message_footnote_spacing"
        android:textColor="@color/ui_text_color_secondary"
        android:textDirection="locale"
        android:textSize="@dimen/ui_text_small"
        android:visibility="gone"
        tools:text="3"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/deliveryStatusIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/ermis_ui_message_footnote_spacing"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_check_double"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ermis_ui_message_footnote_spacing"
        android:gravity="start"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/ui_text_color_secondary"
        android:textDirection="locale"
        android:textSize="@dimen/ui_text_small"
        android:visibility="gone"
        tools:text="16:25"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tvMessageEdited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ermis_ui_message_footnote_spacing"
        android:gravity="start"
        android:layout_marginStart="4dp"
        android:text="@string/ermis_ui_message_edited"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/ui_text_color_secondary"
        android:textDirection="locale"
        android:textSize="@dimen/ui_text_small"
        android:visibility="visible"
        tools:visibility="visible"
        />

</androidx.appcompat.widget.LinearLayoutCompat>
