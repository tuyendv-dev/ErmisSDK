<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/ui_message_composer_trailing_content_horizontal_padding"
        android:paddingVertical="@dimen/ui_message_composer_trailing_content_vertical_padding"
        >

        <ImageView
            android:id="@+id/sendMessageButton"
            android:layout_width="@dimen/ui_message_composer_trailing_content_button_send_message_width"
            android:layout_height="@dimen/ui_message_composer_trailing_content_button_send_message_height"
            android:layout_gravity="bottom"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/ui_message_composer_trailing_content_button_send_message_padding"
            android:src="@drawable/ic_send_message"
            tools:ignore="ContentDescription"
            />

        <ImageView
            android:id="@+id/recordAudioButton"
            android:layout_width="@dimen/ui_message_composer_trailing_content_button_record_audio_width"
            android:layout_height="@dimen/ui_message_composer_trailing_content_button_record_audio_height"
            android:layout_gravity="bottom"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/ui_message_composer_trailing_content_button_record_audio_padding"
            android:src="@drawable/ic_mic"
            android:tag="record_audio"
            tools:ignore="ContentDescription"
            />

        <TextView
            android:id="@+id/cooldownBadgeTextView"
            style="@style/ermisUiCooldownBadgeStyle"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/ui_spacing_tiny"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            tools:text="99"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</merge>
